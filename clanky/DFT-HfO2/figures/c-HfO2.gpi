set term pdfcairo enhanced color dashed font "Arial,10" size 6cm,6cm lw 2 dl 0.5

set ylabel 'Dielectric function, Îµ_i'
set format x ''
set format y '%g'
set key top right

set style line 1 lt 1 lw 2 lc rgb '#e00000' dashtype 1
set style line 2 lt 2 lw 2 lc rgb '#008000' dashtype 2
set style line 3 lt 3 lw 2 lc rgb '#0040c0' dashtype 3
set style line 4 lt 4 lw 2 lc rgb '#f0c010' dashtype 4
set style line 5 lt 5 lw 2 lc rgb '#a000b0' dashtype 5

set multiplot

set bmargin 0.2
set tmargin 0.2
set rmargin 0.2

set size 1,0.43
set origin 0,0.57

set label at graph 0.05,0.9 "a)"

set xrange [4:10]

plot [][]  \
    "cubic.epsilon_br" u 1:2 t 'calculation' w l ls 1,\
    "Liu-cHfO2-eps1.txt" u 1:2 t 'exp' w l ls 2

unset label
set label at graph 0.05,0.9 "b)"
set format x '%g'
set xlabel 'Photon energy, E [eV]'
set origin 0,0.14

plot [][]\
    "cubic.epsilon_br" u 1:3 t 'calculation' w l ls 1,\
    "Liu-cHfO2-eps2.txt" u 1:2 t 'exp' w l ls 2

unset multiplot


